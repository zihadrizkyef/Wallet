<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_abstract1">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="32sp"
        app:fontFamily="@font/roboto_black"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp 58.000" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/textValue"
        tools:text="Belanja Pagi" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textNote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:textColor="?attr/colorOnPrimary"
        app:fontFamily="@font/roboto_reguler"
        app:layout_constraintBottom_toTopOf="@+id/buttonDelete"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        tools:text="Saya beli anu inu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/delete"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>