        android:supportsRtl="true"
        android:theme="@style/Theme.Dompet"
        tools:targetApi="31">
        <activity
            android:name=".activity.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.main.MainActivity" />
        <activity android:name=".activity.AddWalletActivity" />
        <activity android:name=".activity.transactionlist.TransactionListActivity" />
        <activity android:name=".activity.AddTransactionActivity" />
        <activity android:name=".activity.TransactionDetailActivity" />
    </application>

</manifest>